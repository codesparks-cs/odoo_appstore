<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='invoice_tab']//tree//field[@name='price_unit']" position="after">
                <field name="discount_price" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.move.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='order_lines']//tree//field[@name='tax_id']" position="after">
                <field name="discount_price" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>